<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Terms and Conditions Content -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please read the following terms and conditions carefully before using our car parking services."
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. By using this service, you agree to park your vehicle at your own risk."
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. The service provider is not responsible for any loss or damage to your vehicle or personal belongings."
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. You agree to pay any applicable parking fees as indicated by the service."
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <!-- Add more terms as needed -->

        <!-- Agreement Checkbox -->
        <CheckBox
            android:id="@+id/agreeCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the Terms &amp; Conditions"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>


        <!-- Proceed Button -->
        <Button
            android:id="@+id/acceptButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept &amp; Continue"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:enabled="false"
            />



    </LinearLayout>
</ScrollView>
